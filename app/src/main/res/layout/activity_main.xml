<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bwei.com.newtitleweixudong.base.MainActivity">
<FrameLayout
    android:id="@+id/fl_mainactivity_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"></FrameLayout>
<LinearLayout
    android:id="@+id/ll_main_button"
    android:layout_width="match_parent"
    android:layout_height="51dp"
    android:layout_alignParentBottom="true"
    android:weightSum="4"
    android:orientation="horizontal"
    >

    <Button
        android:id="@+id/btn_main_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@drawable/main_home"
        android:text="首页"
        android:textSize="12sp"
        android:background="#ffffff"
        android:textColor="#000000"
        />
    <Button
        android:id="@+id/btn_main_video"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@drawable/main_video"
        android:text="阳光宽频"
        android:textSize="12sp"
        android:background="#ffffff"
        android:textColor="#000000"
        />
    <Button
        android:id="@+id/btn_main_attention"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@drawable/main_attention"
        android:text="关注"
        android:textSize="12sp"
        android:background="#ffffff"
        android:textColor="#000000"
        />
    <Button
        android:id="@+id/btn_main_my"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@drawable/main_my"
        android:text="我的"
        android:textSize="12sp"
        android:background="#ffffff"
        android:textColor="#000000"
        />

</LinearLayout>


</RelativeLayout>
