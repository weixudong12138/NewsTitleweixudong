<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="46dp"

    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="我关注的"
        android:textSize="30sp"
        android:gravity="center"
        />
    <ImageView
        android:id="@+id/iv_fragmentattention_topsearch"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/add_channel_titlbar_new"
        />

</RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/iv_fragmentattention_contant"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/follow_titlebar"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="好友动态"
    android:textSize="25dp"
    android:layout_gravity="center"
    />
</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="385dp">
        <ImageView
            android:id="@+id/iv_fragmentattention_add"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/addicon_repost_normal"
            />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@id/iv_fragmentattention_add"
    android:text="添加更多感兴趣的内容"
    android:textSize="20dp"
    android:layout_centerHorizontal="true"

    />
    </RelativeLayout>
</LinearLayout>