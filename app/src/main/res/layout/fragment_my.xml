<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<LinearLayout

    android:id="@+id/ll_fragmentmy_topll"
    android:layout_width="match_parent"
    android:layout_height="168dp"
    android:background="#000"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_fragmentmy_phone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="48dp"
        android:src="@drawable/cellphoneicon_login_profile"
         />

    <ImageView
        android:id="@+id/iv_fragmentmy_wechat"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="48dp"
        android:src="@drawable/weixin_allshare_normal" />

    <ImageView
        android:id="@+id/iv_fragmentmy_qq"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="48dp"
        android:src="@drawable/qqicon_login_profile" />
    <ImageView
        android:id="@+id/iv_fragmentmy_more"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="48dp"
        android:src="@drawable/xiaoshuo_more"
        />
</LinearLayout>
    <LinearLayout
        android:id="@+id/ll_fragmentmy_zhongll"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_fragmentmy_favoriteicon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/fragment_my_favoriteicon"
            android:gravity="center"
            android:textColor="#333333"
            android:text="收藏" />

        <TextView
            android:id="@+id/tv_fragmentmy_daynight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/fragment_my_dayangleight"
            android:gravity="center"
            android:textColor="#333333"
            android:text="夜间" />

        <TextView
            android:id="@+id/tv_fragmentmy_set"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/fragment_my_set"
            android:gravity="center"
            android:textColor="#333333"
            android:text="设置" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_fragmentmy_downll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <View
            android:id="@+id/View1"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#CCCCCC" />
        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center_vertical"
            android:text="消息通知"
            android:textSize="16sp" />

        <View
            android:id="@+id/View2"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#CCCCCC" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center_vertical"
            android:text="头条通知"
            android:textSize="16sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999999" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center_vertical"
            android:text="京东特供"
            android:textSize="16sp" />

        <View
            android:id="@+id/View3"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#CCCCCC" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center_vertical"
            android:text="我要爆料"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999999" />

        <TextView
            android:id="@+id/tv5"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center_vertical"
            android:text="用户反馈"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999999" />

        <TextView
            android:id="@+id/tv6"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center_vertical"
            android:text="系统设置"
            android:textSize="16sp" />
    </LinearLayout>





</LinearLayout>